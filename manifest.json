{
  "manifest_version": 2,
  "name": "Password generator",
  "description": "Password generator. Do not forget to save him, after change =)",
  "version": "1.10",
  "icons": {"128": "img/icon_128.png"},
  "browser_action": {
    "default_icon": "img/icon_128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": [
      "js/bootstrap.bundle.min.js",
      "js/popup.js"
    ],
    "css": ["css/popup.css"],
    "matches": ["http://*/*", "https://*/*"]
  }],
  "permissions": [
    "activeTab"
  ]
}
