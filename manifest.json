{
  "manifest_version": 2,
  "name": "Password generator",
  "description": "Password generator. Remember to keep it =)",
  "version": "1.11",
  "icons": {
    "128": "img/icon_128.png",
    "96": "img/icon_96.png"
  },
  "browser_action": {
    "default_icon": "img/icon_128.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "js": [
      "js/bootstrap.bundle.min.js",
      "js/popup.js",
      "js/locale.js"
    ],
    "css": ["css/popup.css"],
    "matches": ["http://*/*", "https://*/*"]
  }],
  "permissions": [
    "activeTab"
  ]
}
